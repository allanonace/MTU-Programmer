  <!-- Whether what was replaced (meter, register or both) should be recorded -->
  <!-- Default value is true -->
  <RegisterRecording>false</RegisterRecording>
  <!-- Whether the new/current meter serial number should be recorded -->
  <!-- Default value is true -->
  <UseMeterSerialNumber>true</UseMeterSerialNumber>
  <!-- Whether the old meter reading should be recorded -->
  <!-- Default value is true -->
  <OldReadingRecording>true</OldReadingRecording>
