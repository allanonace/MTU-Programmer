  <!-- Selectable Options settings -->
  <!-- These options appear on the last pane of the program MTU screen. -->
  <!-- If this section is completely omitted, the pane will not appear. -->
  <!-- The number of options is arbitrary and may be of any length -->
  <!-- The options that need the most explanations follow: -->
  <!-- 'name' is the label used by the logger to identify the value -->
  <!-- 'type' is the type of prompt this is, the two valid entries for this -->
  <!--        is either "list" or "text" where "list" will make a drop-down -->
  <!--        with the options listed and "text" will make a text box -->
  <!-- 'required' is used if the field is required to be answered before -->
  <!--        the user is allowed to continue.  If this field is omitted, -->
  <!--        the user may continue with programming without answering the field -->
  <!-- 'len' only applies to the "text" prompt type, and it determines the -->
  <!--        maximum allowed characters for the text prompt.  This field -->
  <!--        is required for the "text" prompt and has no default value -->
  <!-- 'display' contains the value that is shown on the screen as the name -->
  <!--        of the prompt. -->
  <!-- 'minlen' only applies to the "text" prompt type, and it determines the -->
  <!--        minimum allowed characters for the text prompt.  This field -->
  <!--        is optional for the "text" prompt and has no default value -->
  <!--		Designed to work only with 'required' field  -->
  <!-- 'format' only applies to the "text" prompt type, and it determines the -->
  <!--        specific characters for the text prompt.  This field -->
  <!--        is optional for the "text" prompt and has no default value -->
  <!--		Designed to work only with 'required' field.  -->
  <!--        It recognized following type: 'numeric' - full expression is decimal digits  -->
  <!--		'alpha' - full expression is alphabetic letters -->
  <!--		'alphanumeric' - whether expression is categorized as alphabetic letters or  decimal digits -->
  <!--		'date' - expression is date or time format or date and time format -->
  <!--		'time' - expression is date or time format or date and time format -->
  <!--		with conversion to full datetime format and replacing the value -->
  <!--		if only time it will add today date, if only date it will add 12:00:00 -->
  <!--		in this case mostly useful as time. -->
  <Options>
    <option name="LocationInfo" type="list" required="true">
      <display>MTU Location</display>
      <list>Outside</list>
      <list>Inside</list>
      <list>Basement</list>
    </option>
    <option name="LocationInfo" type="list" required="true">
      <display>Meter Location</display>
      <list>Outside</list>
      <list>Inside</list>
      <list>Basement</list>
    </option>
    <option name="Construction" type="list">
      <display>Construction</display>
      <list>Vinyl</list>
      <list>Wood</list>
      <list>Brick</list>
      <list>Aluminium</list>
      <list>Other</list>
    </option>
  </Options>
