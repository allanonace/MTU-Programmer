  <ShowAddMtu>true</ShowAddMtu>
  <ShowAddMtuReplaceMeter>true</ShowAddMtuReplaceMeter>
  <ShowAddMtuMeter>true</ShowAddMtuMeter>
  <ShowReplaceMtu>true</ShowReplaceMtu>
  <ShowReplaceMtuMeter>true</ShowReplaceMtuMeter>
  <ShowReplaceMeter>true</ShowReplaceMeter>
