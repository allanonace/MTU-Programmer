<Globals>
  <!-- Global settings -->
  <!-- User ID maximum and minimum lengths -->
  <!-- Default values are 10 for max, 1 for min -->
  <UserIdMaxLength>10</UserIdMaxLength>
  <UserIdMinLength>3</UserIdMinLength>
  <!-- Password amximum and minimum lengths -->
  <!-- Default values are 10 for max, 1 for min -->
  <PasswordMaxLength>8</PasswordMaxLength>
  <PasswordMinLength>3</PasswordMinLength>
  <!-- log file auto purge options, including enable and max -->
  <!-- file size in kilobytes of all log files -->
  <!-- Default value is false for AutoPurge, 0 for AutoPurgeSize -->
  <AutoPurge>false</AutoPurge>
  <AutoPurgeSize>5</AutoPurgeSize>
  <!-- Whether the application should log information to the permanent -->
  <!-- log file in addition to the results log file.  Note: This only -->
  <!-- applies when in scripting mode. -->
  <ScriptOnly>false</ScriptOnly>
  <!-- Default COM port to use if the interface card is not found -->
  <!-- Only used as fallback, no default value, should be omitted -->
  <ComPort>COM6</ComPort>
  <!-- Number of seconds before reading or writing the MTU -->
  <!-- Default is 5 seconds -->
  <ReadDelay>3</ReadDelay>
  <!-- Number of digits the MTU ID should be formatted to, with leading 0's -->
  <!-- Default is no formatting, just display the number as read -->
  <MtuIdLength>8</MtuIdLength>
  <!-- Number of characters the meter serial number is allowed to be -->
  <!-- Default value is 12 -->
  <MeterNumberLength>15</MeterNumberLength>
  <!-- Account number length -->
  <!-- Default is 7 -->
  <AccountLength>9</AccountLength>
  <!-- What the Account number field should be called -->
  <!-- Default is "Account #" -->
  <AccountLabel>Service Pt. ID</AccountLabel>
  <!-- What the Work Order field should be called -->
  <!-- Default is "Work Order" -->
  <WorkOrderLabel>Field Order</WorkOrderLabel>
  <!-- The maximum number of characters the work order can have. -->
  <!-- Default is 15 -->
  <WorkOrderLength>20</WorkOrderLength>
  <!--  -->
  <XmitTimer>65793</XmitTimer>
  <WakeUpCount>32</WakeUpCount>
  <!-- Default transmit and read intervals -->
  <!-- If omitted, no default values are used -->
  <NormXmitInterval>12 Hrs</NormXmitInterval>
  <TempXmitInterval>None</TempXmitInterval>
  <TempXmitCount>0</TempXmitCount>
  <!-- Default transmit/read intervals for electric MTUs -->
  <!-- If omitted, no default values are used -->
  <ElectricPort1_2Interval>60</ElectricPort1_2Interval>
  <ElectricPort3_4Interval>120</ElectricPort3_4Interval>
