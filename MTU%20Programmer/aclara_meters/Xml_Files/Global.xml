  <!-- Switch to Report that Log file is not secure: Message Box after programming MTU -->
  <!-- Default is true -->
  <ReportLogLocationStatus>false</ReportLogLocationStatus>
  <!-- Show Error Message in script mode -->
  <!-- Default is true -->
  <ShowScriptErrorMessage>false</ShowScriptErrorMessage>
  <!-- Show Vendor and Model for Meters during programming MTU -->
  <!-- Default is false -->
  <ShowMeterVendor>true</ShowMeterVendor>
  <!-- The following line specifies the location for the appointments file.    -->
  <!-- If this line is omitted, it will default to the current data directory. -->
  <AppointmentsLocation>C:\Development\StarProgrammer2005\Aclara StarSystemPC\Aclara StarSystemPC\bin\Debug</AppointmentsLocation>
  <!-- This option allows the user to specify the name of the appointments file -->
  <AppointmentsName>Appointments.xml</AppointmentsName>
