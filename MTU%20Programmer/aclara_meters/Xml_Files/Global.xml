  <!-- Whether the Meter Works or not prompt should be displayed -->
  <!-- Default value is true -->
  <MeterWorkRecording>false</MeterWorkRecording>
  <!-- Whether the appointment screen should be displayed if appointments are found -->
  <!-- Default value is true -->
  <ApptScreen>true</ApptScreen>
  <!-- Whether the account number must be entered twice or not -->
  <!-- Default value is true -->
  <AccountDualEntry>false</AccountDualEntry>
  <!-- Whether the work order prompt should be dual entry or not -->
  <!-- Default value is true -->
  <WorkOrderDualEntry>false</WorkOrderDualEntry>
  <!-- Whether the old meter serial number prompt should be dual entry or not -->
  <!-- Defaul is true -->
  <OldSerialNumDualEntry>false</OldSerialNumDualEntry>
  <!-- Whether the new/current meter serial number prompt should be dual entry or not -->
  <!-- The default value is true -->
  <NewSerialNumDualEntry>false</NewSerialNumDualEntry>
  <!-- Whether the meter reading should be dual entry or not -->
